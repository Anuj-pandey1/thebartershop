<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:orientation="vertical"
    android:background="@color/purple_200">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:elevation="2dp"
            android:src="@drawable/drawable_profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/iv_edit_profilepic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="84dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_profile"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintHorizontal_bias="0.492">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/margin"
                android:layout_width="340sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <RatingBar
                    android:id="@+id/rb_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:numStars="5"
                    android:rating="2.0"
                    android:stepSize="0.1" />


                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_edit_name"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_mail" />

                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="E-mail"
                        android:textColor="@color/black"
                        android:textSize="20dp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Phone"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_edit_phone"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit"
                        android:clickable="true"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Location"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <ImageView
                        android:id="@+id/iv_edit_location"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_ads" />

                    <TextView
                        android:id="@+id/tv_ads"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Your Ads"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_ads"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_history" />

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="History"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>


                    <ImageView
                        android:id="@+id/iv_view_history"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_forward" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="Log out" />


            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>





</LinearLayout>