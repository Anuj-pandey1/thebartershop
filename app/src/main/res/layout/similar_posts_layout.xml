<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_sim_post"
    android:layout_width="320dp"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_sim_post_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exchange_cate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/antic"
                android:gravity="center"
                android:text="Product"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <View
                android:id="@+id/hl_post"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_sim_post_img"
                android:background="#DBE1DA" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_exchange_cate"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/iccompare_arrows" />


                <TextView
                    android:id="@+id/tv_exchange_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/iv_sim_post_img"
                    android:gravity="center"
                    android:text="Category" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>