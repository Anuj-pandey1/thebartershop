<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/post_click_fav"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iv_postimg_fav"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="exchange 1"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/tv_exchange01_fav"/>
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/iccompare_arrows"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="exchange 2"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/tv_exchange02_fav"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_postitemname_fav"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="item name"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>