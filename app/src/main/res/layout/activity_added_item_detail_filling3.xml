<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/ll_complete"
    tools:context=".AddingItem.AddedItemDetailFilling_3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="@string/laststep"
        android:textColor="@color/light_orange"
        android:textSize="30sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_cateogary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/antic"
        android:gravity="center"
        android:text="@string/chooseacategory"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.krishna.team_olive.AddingItem.Spinner.CustomSpinner
        android:id="@+id/spinner_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_spinner"
        android:dropDownVerticalOffset="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/custom_background5"
            android:fontFamily="@font/antic"
            android:text="@string/done"
            android:textColor="@color/green"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>