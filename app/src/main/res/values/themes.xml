<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TEAM_OLIVE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/button_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_colour</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/white_pressed</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Circular">
        <item name="cornerSize">50%</item>

    </style>
    <style name = "Button_background" parent = "Theme.AppCompat.DayNight.DarkActionBar">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="RatingBar_yellow" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grayish</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="RatingBar_green" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grayish</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="RatingBar_red" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grayish</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="custom_fab">
        <item name="android:background">@drawable/fab_label</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="navigationTheme">
        <!--colour of text and icon when selected-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/gold</item>
    </style>


</resources>